    <TargetFramework>netcoreapp3.1</TargetFramework>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="PublisherConfiguration.xml" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="PublisherConfiguration.xml">
